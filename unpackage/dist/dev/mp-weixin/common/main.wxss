/* 提示窗口 */
.uni-tip {

		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		-webkit-box-orient: vertical;
		-webkit-box-direction: normal;
		-webkit-flex-direction: column;
		        flex-direction: column;

		padding: 15rpx;
		width: 540rpx;
		height: 270rpx;
		background-color: #fff;
		border-radius: 14rpx;
}
.uni-tip-title {
		margin-top: 27rpx;
		margin-bottom: 10px;
		text-align: center;
		font-size: 36rpx;
		color: #000;
}
.uni-tip-content {
		/* padding: 15px;
 */
		font-size: 30rpx;
		color: #888888;
		text-align: center;
}
.uni-tip-group-button {

		display: -webkit-box;
		display: -webkit-flex;
		display: flex;

		-webkit-box-orient: horizontal;
		-webkit-box-direction: normal;
		-webkit-flex-direction: row;
		        flex-direction: row;
		-webkit-box-pack: center;
		-webkit-justify-content: center;
		        justify-content: center;
		text-align: center;
		margin-top: 20px;
		height: 100rpx;
		line-height: 100rpx;
		border-top: 1rpx solid #f1f1f1;
}
.uni-tip-button {
		-webkit-box-flex: 1;
		-webkit-flex: 1;
		        flex: 1;
		text-align: center;
		font-size: 36rpx;
		color: #0a0a0a;
}
.uni-tip-button1 {
		border-right: 1rpx solid #f1f1f1;
}

